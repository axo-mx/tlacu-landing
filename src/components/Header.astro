          <!-- Mega Menu Dropdown -->
          <div class="absolute top-full left-1/2 -translate-x-1/2 pt-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
            <div class="bg-white rounded-2xl shadow-2xl border border-navy/10 p-6 w-[500px]">
              <!-- Header -->
              <div class="flex items-center gap-3 mb-4 pb-4 border-b border-navy/10">
                <div class="w-10 h-10 bg-terracotta/10 rounded-xl flex items-center justify-center">
                  <span class="text-xl"></span>
                </div>
                <div>
                  <div class="font-bold text-navy">TLACU ECOEMS</div>
