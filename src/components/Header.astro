  const ecoemsMenu = document.getElementById('mobile-ecoems-menu');
  const ecoemsIcon = document.getElementById('mobile-ecoems-icon');

  ecoemsBtn?.addEventListener('click', () => {
    ecoemsMenu?.classList.toggle('hidden');
    ecoemsIcon?.classList.toggle('rotate-180');
  });

  // Close menu when clicking a link
  menu?.querySelectorAll('a').forEach(link => {
