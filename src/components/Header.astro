        </div>

        <a href="/contacto" class="text-navy/70 hover:text-navy font-medium transition-colors">Contacto</a>

        <a href="https://tlacu.mx/auth/login" target="_blank" class="text-navy/70 hover:text-navy font-medium transition-colors">Iniciar sesi贸n</a>
        <a href="https://tlacu.mx/auth/register" target="_blank" class="px-6 py-2.5 bg-terracotta text-white font-semibold rounded-xl hover:bg-terracotta-dark transition-colors shadow-lg shadow-terracotta/25">
          Registrarse gratis
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button id="mobile-menu-btn" class="md:hidden p-2 text-navy" aria-label="Men煤">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <div class="flex flex-col gap-2">
        <a href="/acerca" class="text-navy/70 hover:text-navy font-medium transition-colors py-2">Acerca de</a>

        <!-- Mobile ECOEMS Accordion -->
        <div class="border-t border-navy/10 pt-2">
          <button id="mobile-ecoems-btn" class="flex items-center justify-between w-full text-navy font-semibold py-2">
            <span class="flex items-center gap-2">
              <span class="text-lg"></span>
              ECOEMS
            </span>
            <svg id="mobile-ecoems-icon" class="w-4 h-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          <div id="mobile-ecoems-menu" class="hidden pl-6 space-y-2 pb-2">
            <a href="/plataforma" class="block text-navy/70 hover:text-turquoise font-medium transition-colors py-1">Plataforma</a>
            <a href="/examenes" class="block text-navy/70 hover:text-terracotta font-medium transition-colors py-1">Ex谩menes</a>
            <a href="/modulos" class="block text-navy/70 hover:text-navy font-medium transition-colors py-1">M贸dulos</a>
            <a href="/precios" class="block text-navy/70 hover:text-turquoise font-medium transition-colors py-1">Precios</a>
          </div>
        </div>

        <a href="/contacto" class="text-navy/70 hover:text-navy font-medium transition-colors py-2 border-t border-navy/10 pt-2">Contacto</a>

        <div class="border-t border-navy/10 pt-2 space-y-2">
          <a href="https://tlacu.mx/auth/login" target="_blank" class="block text-navy/70 hover:text-navy font-medium transition-colors py-2">Iniciar sesi贸n</a>
          <a href="https://tlacu.mx/auth/register" target="_blank" class="block px-6 py-2.5 bg-terracotta text-white font-semibold rounded-xl text-center hover:bg-terracotta-dark transition-colors">
            Registrarse gratis
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');

  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });

  // Mobile ECOEMS accordion
  const ecoemsBtn = document.getElementById('mobile-ecoems-btn');
  const ecoemsMenu = document.getElementById('mobile-ecoems-menu');
  const ecoemsIcon = document.getElementById('mobile-ecoems-icon');

  ecoemsBtn?.addEventListener('click', () => {
    ecoemsMenu?.classList.toggle('hidden');
    ecoemsIcon?.classList.toggle('rotate-180');
  });

  // Close menu when clicking a link
  menu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      menu?.classList.add('hidden');
    });
  });
</script>
