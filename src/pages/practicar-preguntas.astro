        const circle = el.querySelector('span > span');
        if (circle) circle.className = 'w-6 h-6 rounded-full bg-red-400 flex items-center justify-center text-xs font-bold text-white flex-shrink-0';
      } else {
        el.className = 'demo-option w-full text-left px-5 py-3.5 rounded-xl border-2 border-navy/5 bg-navy/2 transition-all text-navy/40 text-sm font-medium';
