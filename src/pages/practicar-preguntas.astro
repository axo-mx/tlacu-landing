      expEl.classList.remove('hidden');
      if (isCorrect) {
        expBox.className = 'rounded-xl p-5 border bg-emerald-50 border-emerald-200';
        resultIcon.className = 'w-6 h-6 rounded-full bg-emerald-500 flex items-center justify-center flex-shrink-0';
        resultIcon.innerHTML = '<svg class="w-3.5 h-3.5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path></svg>';
        resultText.className = 'font-bold text-sm text-emerald-700';
        resultText.textContent = '¡Correcto!';
        expText.className = 'text-sm leading-relaxed text-emerald-800/70';
        expText.textContent = q.explanation;
      } else {
        expBox.className = 'rounded-xl p-5 border bg-red-50 border-red-200';
        resultIcon.className = 'w-6 h-6 rounded-full bg-red-400 flex items-center justify-center flex-shrink-0';
        resultIcon.innerHTML = '<svg class="w-3.5 h-3.5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M6 18L18 6M6 6l12 12"></path></svg>';
        resultText.className = 'font-bold text-sm text-red-700';
        resultText.textContent = 'Incorrecto';
        expText.className = 'text-sm leading-relaxed text-red-800/70';
        expText.textContent = q.explanation;
      }
    }

    // Show wrong explanations toggle
    const wrongToggle = document.getElementById('demo-wrong-toggle');
    const wrongList = document.getElementById('demo-wrong-list');
    if (wrongToggle && wrongList) {
      wrongToggle.classList.remove('hidden');
      const wrongEntries = Object.entries(q.wrongExplanations)
        .filter(([key]) => parseInt(key) !== q.correct)
        .map(([key, text]) => `
          <div class="flex items-start gap-3 px-4 py-3 rounded-lg bg-white border border-navy/5">
            <span class="w-5 h-5 rounded-full bg-navy/10 flex items-center justify-center text-[10px] font-bold text-navy/40 flex-shrink-0 mt-0.5">${letters[parseInt(key)]}</span>
            <div>
              <span class="font-semibold text-navy/70 text-sm">${q.options[parseInt(key)]}</span>
              <p class="text-navy/50 text-xs mt-0.5">${text}</p>
            </div>
          </div>
        `).join('');
      wrongList.innerHTML = wrongEntries;
    }

    // Show footer
    const footEl = document.getElementById('demo-footer');
    const nextBtn = document.getElementById('demo-next');
    if (footEl && nextBtn) {
      footEl.classList.remove('hidden');
      if (current < questions.length - 1) {
        nextBtn.textContent = 'Siguiente pregunta →';
      } else {
        nextBtn.textContent = 'Practicar en la plataforma →';
      }
    }
  }

  // Next button
  document.getElementById('demo-next')?.addEventListener('click', () => {
    if (current < questions.length - 1) {
      current++;
      renderQuestion();
      document.getElementById('demo-card')?.scrollIntoView({ behavior: 'smooth', block: 'center' });
    } else {
      window.open(document.querySelector('[data-platform-url]')?.getAttribute('href') || '/plataforma', '_blank');
    }
  });

  // Wrong explanations toggle
  document.getElementById('demo-wrong-toggle')?.addEventListener('click', () => {
    const list = document.getElementById('demo-wrong-list');
    const chevron = document.getElementById('demo-wrong-chevron');
    if (list && chevron) {
      list.classList.toggle('hidden');
      chevron.classList.toggle('rotate-180');
    }
  });

  // Init
  renderQuestion();
</script>
