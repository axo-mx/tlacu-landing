---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PlatformLink from '../components/PlatformLink.astro';

const steps = [
  {
    number: 1,
    title: 'Haz el diagnóstico',
    description: 'Responde 64 preguntas (gratuito) o 128 (Pro) que cubren las 10 áreas del ECOEMS. El sistema identifica tus fortalezas y debilidades.',
    link: '/examenes/diagnostico',
    linkText: 'Ver examen diagnóstico',
  },
  {
    number: 2,
    title: 'Configura tu plan',
    description: 'Elige la fecha de tu examen, los días que puedes estudiar y cuánto tiempo diario le quieres dedicar (30, 45, 60 o 90 minutos).',
  },
  {
    number: 3,
    title: 'Recibe tu plan personalizado',
    description: 'El algoritmo genera un calendario día a día con actividades balanceadas: preguntas, flashcards y módulos enfocados en tus áreas más débiles.',
  },
  {
    number: 4,
    title: 'Estudia y avanza',
    description: 'Cada día ves exactamente qué hacer. Completa las actividades, observa tu progreso y llega al examen preparado.',
  },
];

const dailyActivities = [
  {
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path></svg>`,
    title: 'Flashcards',
    description: 'Repaso con repetición espaciada para fijar conceptos clave en tu memoria a largo plazo.',
    percentage: '25%',
    target: '15 tarjetas',
  },
  {
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path></svg>`,
    title: 'Módulos interactivos',
    description: 'Aprende conceptos con módulos visuales e interactivos: tabla periódica, células, álgebra, geometría y más.',
    percentage: '35%',
    target: 'Tema del día',
  },
  {
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>`,
    title: 'Preguntas de práctica',
    description: 'Practica con preguntas del área donde más necesitas mejorar, con retroalimentación inmediata.',
    percentage: '35%',
    target: '10 preguntas',
  },
  {
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>`,
    title: 'Examen semanal',
    description: 'Cada semana haces un mini examen de 50 preguntas para medir tu avance real.',
    percentage: '5%',
    target: 'Los sábados',
  },
];

const features = [
  {
    title: 'Prioriza tus áreas débiles',
    description: 'El algoritmo asigna más sesiones a las áreas donde obtuviste menor puntaje en el diagnóstico. Cada minuto cuenta.',
  },
  {
    title: 'Horario flexible',
    description: 'Tú eliges qué días estudiar y cuánto tiempo (30 a 90 min). El plan se adapta a tu vida, no al revés.',
  },
  {
    title: 'Progreso visual',
    description: 'Anillo de progreso, porcentaje de avance, conteo de sesiones completadas y días restantes hasta el examen.',
  },
  {
    title: 'Repaso inteligente',
    description: 'Los últimos 7 días antes del examen se dedican a repasar todas las áreas débiles en ciclos rápidos.',
  },
  {
    title: 'Fechas ECOEMS oficiales',
    description: 'El plan se alinea a las fechas oficiales de aplicación del ECOEMS (junio y julio 2026).',
  },
  {
    title: 'Regenerable en cualquier momento',
    description: 'Si cambias de fecha de examen o quieres rehacer el diagnóstico, puedes regenerar tu plan completo.',
  },
];
---

<Layout title="Plan de Estudio Personalizado - TLACU ECOEMS">
  <Header />

  <main>
    <!-- Hero -->
    <section class="pt-36 sm:pt-40 pb-20 bg-gradient-hero relative overflow-hidden">
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute -right-20 -top-20 w-96 h-96 bg-turquoise/10 rounded-full blur-3xl"></div>
        <div class="absolute -left-20 -bottom-20 w-96 h-96 bg-terracotta/5 rounded-full blur-3xl"></div>
      </div>

      <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <div>
            <div class="inline-flex items-center gap-2 px-4 py-2 bg-turquoise/20 rounded-full text-turquoise text-sm font-medium mb-6">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
              </svg>
              Generado automáticamente
            </div>
            <h1 class="text-4xl sm:text-5xl lg:text-6xl font-black text-white leading-tight mb-6">
              Tu plan de estudio <span class="text-gradient-fire">personalizado</span>
            </h1>
            <p class="text-xl text-white/70 mb-8">
              Haz un diagnóstico, y el sistema genera un calendario día a día con las actividades exactas que necesitas para prepararte para el ECOEMS.
            </p>
            <div class="flex flex-col sm:flex-row gap-4">
              <PlatformLink path="/autenticacion/registro" class="px-8 py-4 bg-terracotta text-white font-bold rounded-xl hover:bg-terracotta-dark transition-all shadow-xl shadow-terracotta/30 text-center">
                Obtener mi plan gratis
              </PlatformLink>
              <a href="#como-funciona" class="px-8 py-4 bg-white/10 text-white font-bold rounded-xl hover:bg-white/20 transition-all border border-white/20 text-center">
                Ver cómo funciona
              </a>
            </div>
          </div>

          <!-- Stats card -->
          <div class="hidden lg:flex justify-center">
            <div class="bg-white/10 backdrop-blur rounded-3xl p-8 border border-white/20 w-full max-w-sm">
              <!-- Mock plan preview -->
              <div class="flex items-center gap-3 mb-6">
                <div class="w-16 h-16 rounded-full border-4 border-turquoise flex items-center justify-center">
                  <span class="text-white font-black text-lg">47%</span>
                </div>
                <div>
                  <div class="text-white font-bold">Progreso del plan</div>
                  <div class="text-white/50 text-sm">42 días restantes</div>
                </div>
              </div>
              <div class="space-y-3">
                <div class="bg-white/10 rounded-xl p-3 flex items-center justify-between">
                  <span class="text-white/80 text-sm">Sesiones totales</span>
                  <span class="text-turquoise font-bold">85</span>
                </div>
                <div class="bg-white/10 rounded-xl p-3 flex items-center justify-between">
                  <span class="text-white/80 text-sm">Minutos por día</span>
                  <span class="text-turquoise font-bold">60</span>
                </div>
                <div class="bg-white/10 rounded-xl p-3 flex items-center justify-between">
                  <span class="text-white/80 text-sm">Días por semana</span>
                  <span class="text-turquoise font-bold">5</span>
                </div>
                <div class="bg-white/10 rounded-xl p-3 flex items-center justify-between">
                  <span class="text-white/80 text-sm">Áreas prioritarias</span>
                  <span class="text-terracotta font-bold">4</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Cómo funciona -->
    <section id="como-funciona" class="py-20 bg-cream">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl sm:text-4xl font-black text-navy mb-4">
            ¿Cómo se genera tu plan?
          </h2>
          <p class="text-lg text-navy/70 max-w-2xl mx-auto">
            4 pasos para pasar de "no sé por dónde empezar" a tener un camino claro hasta el día del examen
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          {steps.map((step) => (
            <div class="relative">
              <div class="bg-white rounded-2xl p-6 shadow-lg h-full border border-navy/5">
                <div class="w-12 h-12 bg-turquoise text-white rounded-full flex items-center justify-center font-bold text-xl mb-5">{step.number}</div>
                <h3 class="text-lg font-bold text-navy mb-3">{step.title}</h3>
                <p class="text-navy/60 text-sm leading-relaxed">{step.description}</p>
                {step.link && (
                  <a href={step.link} class="inline-flex items-center gap-1 text-turquoise text-sm font-semibold mt-3 hover:underline">
                    {step.linkText}
                    <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                    </svg>
                  </a>
                )}
              </div>
              {step.number < 4 && (
                <div class="hidden lg:block absolute top-1/2 -right-3 transform -translate-y-1/2 text-navy/20 z-10">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
              )}
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Qué incluye cada día -->
    <section class="py-20 bg-cream-dark">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl sm:text-4xl font-black text-navy mb-4">
            ¿Qué hace tu plan cada día?
          </h2>
          <p class="text-lg text-navy/70 max-w-2xl mx-auto">
            Cada sesión combina diferentes tipos de actividades para que aprendas, practiques y retengas
          </p>
        </div>

        <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
          {dailyActivities.map((activity) => (
            <div class="bg-white rounded-2xl p-6 shadow-lg border border-navy/5 hover:shadow-xl hover:border-turquoise/20 transition-all">
              <div class="w-12 h-12 bg-turquoise/10 rounded-xl flex items-center justify-center mb-5 text-turquoise">
                <Fragment set:html={activity.icon} />
              </div>
              <h3 class="text-lg font-bold text-navy mb-2">{activity.title}</h3>
              <p class="text-navy/60 text-sm leading-relaxed mb-4">{activity.description}</p>
              <div class="flex items-center justify-between pt-3 border-t border-navy/10">
                <span class="text-xs text-navy/40 font-medium">{activity.percentage} de tu sesión</span>
                <span class="text-xs font-bold text-turquoise">{activity.target}</span>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Algoritmo inteligente -->
    <section class="py-20 bg-gradient-to-br from-navy to-navy-light">
      <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <div>
            <div class="inline-flex items-center gap-2 px-4 py-2 bg-turquoise/20 rounded-full text-turquoise text-sm font-medium mb-6">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
              </svg>
              Algoritmo adaptativo
            </div>
            <h2 class="text-3xl sm:text-4xl font-black text-white leading-tight mb-6">
              Estudia lo que <span class="text-turquoise">más necesitas</span>, no todo por igual
            </h2>
            <p class="text-white/70 text-lg mb-8">
              El plan no reparte tu tiempo de manera uniforme. Usa tus resultados del diagnóstico para calcular cuántas sesiones dedicar a cada área.
            </p>
            <ul class="space-y-4">
              {[
                'Las áreas con menor puntaje reciben más sesiones',
                'Se garantiza un mínimo de 2 sesiones por área',
                'Los últimos 7 días son de repaso intensivo',
                'El tiempo diario se distribuye entre actividades variadas',
              ].map((item) => (
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-turquoise mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span class="text-white/80">{item}</span>
                </li>
              ))}
            </ul>
          </div>

          <!-- Example distribution -->
          <div class="bg-white/10 backdrop-blur rounded-3xl p-6 border border-white/20">
            <div class="text-white/40 text-xs font-bold uppercase tracking-widest mb-5">Ejemplo de distribución</div>
            <div class="space-y-3">
              {[
                { area: 'Formación Cívica y Ética', score: 35, sessions: 14, color: 'bg-red-500' },
                { area: 'Física', score: 42, sessions: 12, color: 'bg-red-400' },
                { area: 'Química', score: 50, sessions: 10, color: 'bg-amber-500' },
                { area: 'Geografía', score: 55, sessions: 9, color: 'bg-amber-400' },
                { area: 'Biología', score: 60, sessions: 8, color: 'bg-amber-400' },
                { area: 'Matemáticas', score: 65, sessions: 7, color: 'bg-emerald-400' },
                { area: 'Español', score: 72, sessions: 6, color: 'bg-emerald-500' },
                { area: 'Historia', score: 78, sessions: 5, color: 'bg-emerald-500' },
              ].map((item) => (
                <div class="flex items-center gap-3">
                  <div class="w-28 text-white/70 text-xs truncate flex-shrink-0">{item.area}</div>
                  <div class="flex-1 bg-white/10 rounded-full h-5 overflow-hidden">
                    <div class={`h-full rounded-full ${item.color} flex items-center justify-end pr-2`} style={`width: ${Math.max(item.sessions / 14 * 100, 20)}%`}>
                      <span class="text-[10px] font-bold text-white">{item.sessions}</span>
                    </div>
                  </div>
                  <div class="w-10 text-right text-white/40 text-xs">{item.score}%</div>
                </div>
              ))}
            </div>
            <div class="flex items-center justify-between mt-4 pt-3 border-t border-white/10 text-xs text-white/40">
              <span>Sesiones asignadas</span>
              <span>Puntaje diagnóstico</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Características -->
    <section class="py-20 bg-cream">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl sm:text-4xl font-black text-navy mb-4">
            Un plan diseñado para que funcione
          </h2>
          <p class="text-lg text-navy/70 max-w-2xl mx-auto">
            Cada detalle está pensado para que llegues preparado al día del examen
          </p>
        </div>

        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {features.map((feature) => (
            <div class="bg-white rounded-2xl p-6 shadow-lg border border-navy/5 hover:shadow-xl hover:border-turquoise/20 transition-all">
              <div class="w-10 h-10 bg-turquoise/10 rounded-xl flex items-center justify-center mb-4">
                <svg class="w-5 h-5 text-turquoise" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
              <h3 class="font-bold text-navy mb-2">{feature.title}</h3>
              <p class="text-navy/60 text-sm leading-relaxed">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Free vs Pro -->
    <section class="py-20 bg-cream-dark">
      <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl sm:text-4xl font-black text-navy mb-4">
            Plan Gratuito vs Pro
          </h2>
          <p class="text-lg text-navy/70 max-w-2xl mx-auto">
            Ambos planes incluyen el plan de estudio personalizado. Pro te da más herramientas para aprovecharlo al máximo.
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
          <!-- Gratuito -->
          <div class="bg-white rounded-2xl p-8 shadow-lg border-2 border-navy/10">
            <div class="text-center mb-6">
              <span class="text-sm font-bold text-navy/40 uppercase tracking-widest">Plan</span>
              <h3 class="text-2xl font-black text-navy">Gratuito</h3>
            </div>
            <ul class="space-y-4 mb-8">
              {[
                'Diagnóstico de 64 preguntas',
                'Plan de estudio con calendario',
                'Actividades diarias personalizadas',
                'Progreso general del plan',
                '10 preguntas de práctica por día',
                '15 flashcards por día',
              ].map((item) => (
                <li class="flex items-center gap-3 text-navy/70">
                  <svg class="w-5 h-5 text-turquoise flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  {item}
                </li>
              ))}
            </ul>
            <PlatformLink path="/autenticacion/registro" class="block w-full text-center px-6 py-3 bg-navy text-white font-bold rounded-xl hover:bg-navy/90 transition-colors">
              Empezar gratis
            </PlatformLink>
          </div>

          <!-- Pro -->
          <div class="bg-gradient-to-br from-navy to-navy-light rounded-2xl p-8 shadow-lg text-white relative overflow-hidden">
            <div class="absolute top-4 right-4">
              <span class="px-3 py-1 bg-terracotta text-white text-xs font-bold rounded-full">RECOMENDADO</span>
            </div>
            <div class="text-center mb-6">
              <span class="text-sm font-bold text-white/40 uppercase tracking-widest">Plan</span>
              <h3 class="text-2xl font-black">Pro</h3>
            </div>
            <ul class="space-y-4 mb-8">
              {[
                'Diagnóstico completo de 128 preguntas',
                'Plan de estudio adaptativo',
                'Vista semanal del calendario',
                'Preguntas y flashcards ilimitadas',
                'Todos los módulos interactivos',
                'Exámenes semanales de seguimiento',
                'Reprogramación adaptativa',
                'Repaso intensivo pre-examen',
              ].map((item) => (
                <li class="flex items-center gap-3 text-white/80">
                  <svg class="w-5 h-5 text-turquoise flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  {item}
                </li>
              ))}
            </ul>
            <PlatformLink path="/autenticacion/registro" class="block w-full text-center px-6 py-3 bg-turquoise text-white font-bold rounded-xl hover:bg-turquoise-dark transition-colors">
              Obtener Pro — $399
            </PlatformLink>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA final -->
    <section class="py-20 bg-gradient-hero">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl sm:text-4xl font-black text-white mb-6">
          Deja de estudiar a ciegas
        </h2>
        <p class="text-xl text-white/70 mb-10 max-w-2xl mx-auto">
          Haz el diagnóstico, recibe tu plan personalizado y sabe exactamente qué estudiar cada día hasta el ECOEMS.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <PlatformLink path="/autenticacion/registro" class="px-10 py-4 bg-terracotta text-white font-bold text-lg rounded-xl hover:bg-terracotta-dark transition-all shadow-xl shadow-terracotta/30">
            Obtener mi plan gratis
          </PlatformLink>
          <a href="/examenes/diagnostico" class="px-10 py-4 bg-white/10 text-white font-bold text-lg rounded-xl hover:bg-white/20 transition-all border border-white/20">
            Ver examen diagnóstico
          </a>
        </div>
        <p class="text-white/40 text-sm mt-4">
          Sin tarjeta de crédito requerida
        </p>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
