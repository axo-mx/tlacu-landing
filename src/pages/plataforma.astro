<script>
  const desktopGallery = document.getElementById('gallery-desktop')!;
  const mobileGallery  = document.getElementById('gallery-mobile')!;
  const toggleBtns     = document.querySelectorAll<HTMLButtonElement>('.gallery-toggle');

  const ACTIVE   = 'bg-white text-navy shadow-sm';
  const INACTIVE = 'text-navy/50 hover:text-navy';

  function switchTo(target: 'desktop' | 'mobile') {
    const isDesktop = target === 'desktop';
    desktopGallery.classList.toggle('hidden', !isDesktop);
    mobileGallery.classList.toggle('hidden',  isDesktop);

    toggleBtns.forEach(btn => {
      const active = btn.dataset.target === target;
      btn.classList.toggle(...(ACTIVE.split(' ')   as [string, ...string[]]), active);
      btn.classList.toggle(...(INACTIVE.split(' ') as [string, ...string[]]), !active);
      btn.setAttribute('aria-pressed', String(active));
    });
  }

  // Default: desktop on md+ screens, mobile on smaller screens
  const preferMobile = window.matchMedia('(max-width: 767px)').matches;
  switchTo(preferMobile ? 'mobile' : 'desktop');

  toggleBtns.forEach(btn => {
    btn.addEventListener('click', () => switchTo(btn.dataset.target as 'desktop' | 'mobile'));
  });
</script>
