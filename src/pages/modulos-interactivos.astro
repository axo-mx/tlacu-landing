<script>
  // Periodic Table - Interaction
  const CATEGORY_LABELS: Record<string, string> = {
    'alkali-metal': 'Metal Alcalino',
    'alkaline-earth': 'Alcalinoterreo',
    'transition-metal': 'Metal de Transicion',
    'post-transition': 'Post-transicion',
    'metalloid': 'Metaloide',
    'nonmetal': 'No Metal',
    'halogen': 'Halogeno',
    'noble-gas': 'Gas Noble',
    'lanthanide': 'Lantanido',
    'actinide': 'Actinido',
  };

  const STATE_LABELS: Record<string, string> = {
    'solid': 'Solido',
    'liquid': 'Liquido',
    'gas': 'Gas',
  };

  const elementBtns = document.querySelectorAll('.element-btn');
  const selectedElementDiv = document.getElementById('selected-element');

  elementBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      const data = JSON.parse(btn.getAttribute('data-element') || '{}');
      const isUnlocked = btn.getAttribute('data-unlocked') === 'true';

      if (!isUnlocked) {
        alert('Registrate gratis para desbloquear este elemento');
        return;
      }

      if (selectedElementDiv) {
        selectedElementDiv.classList.remove('hidden');

        const symbolBox = document.getElementById('el-symbol-box');
        const categoryClass = Array.from(btn.classList).find(c => c.startsWith('bg-'));
        if (symbolBox && categoryClass) {
          symbolBox.className = `w-16 h-16 rounded-2xl flex flex-col items-center justify-center text-white shadow-lg ${categoryClass}`;
        }

        const elNumber = document.getElementById('el-number');
        const elSymbol = document.getElementById('el-symbol');
        const elName = document.getElementById('el-name');
        const elState = document.getElementById('el-state');
        const elMassVal = document.getElementById('el-mass-val');
        const elCategory = document.getElementById('el-category');

        if (elNumber) elNumber.textContent = data.number;
        if (elSymbol) elSymbol.textContent = data.symbol;
        if (elName) elName.textContent = data.nameEs;
        if (elState) elState.textContent = STATE_LABELS[data.state] || data.state;
        if (elMassVal) elMassVal.textContent = `${data.mass} u`;
        if (elCategory) elCategory.textContent = CATEGORY_LABELS[data.category] || data.category;
      }
    });
  });

</script>

