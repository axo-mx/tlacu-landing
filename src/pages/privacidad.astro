<style>
  .prose h2 {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-navy);
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }
  .prose h3 {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--color-navy);
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }
  .prose p {
    color: rgba(26, 43, 72, 0.7);
    margin-bottom: 1rem;
    line-height: 1.75;
  }
